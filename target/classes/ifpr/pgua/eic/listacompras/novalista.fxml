<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600" prefWidth="800" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.listacompras.controllers.TelaNovaLista">
   <children>
      <GridPane hgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="383.0" minWidth="10.0" prefWidth="84.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="702.0" minWidth="10.0" prefWidth="275.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="702.0" minWidth="10.0" prefWidth="108.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="702.0" minWidth="10.0" prefWidth="303.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Produto:" GridPane.rowIndex="2" />
            <ComboBox fx:id="cbProdutos" prefHeight="24.0" prefWidth="268.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Quantidade:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <TextField fx:id="tfQuantidade" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <Label text="Anotaçao:" GridPane.rowIndex="3" />
            <TextField fx:id="tfAnotacao" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnIndex="3" GridPane.rowIndex="3">
               <children>
                  <Button fx:id="btAdicionar" mnemonicParsing="false" onAction="#adicionarItem" prefHeight="24.0" prefWidth="99.0" text="Adicionar" />
                  <Button fx:id="btRemover" mnemonicParsing="false" onAction="#removerItem" text="Remover" />
               </children>
            </HBox>
            <Label text="Data/Hora" />
            <TextField fx:id="tfDataHora" editable="false" GridPane.columnIndex="1" />
            <Label text="Título:" GridPane.columnIndex="2" />
            <TextField fx:id="tfTitulo" GridPane.columnIndex="3" />
            <Label text="Descrição:" GridPane.rowIndex="1" />
            <TextField fx:id="tfDescricao" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <TableView fx:id="tbItems" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="tbcProduto" prefWidth="214.0" text="Produto" />
          <TableColumn fx:id="tbcQuantidade" minWidth="0.0" prefWidth="173.0" text="Quantidade" />
            <TableColumn fx:id="tbcAnotacao" prefWidth="385.0" text="Anotaçao" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#salvar" text="Salvar" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
