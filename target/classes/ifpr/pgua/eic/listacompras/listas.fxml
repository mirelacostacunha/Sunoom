<?xml version="1.0" encoding="UTF-8"?>


<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      prefHeight="600" prefWidth="800"
      fx:controller="ifpr.pgua.eic.listacompras.controllers.TelaListas"
      spacing="10"
      >

    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>

    <TableView fx:id="tbListas" onMouseClicked="#mostrarItens">
        <columns>
        <TableColumn fx:id="tbcIdLista" text="Id"/>
        <TableColumn fx:id="tbcTituloLista" text="Título"/>
        <TableColumn fx:id="tbcDescricaoLista" text="Descrição"/>
        <TableColumn fx:id="tbcDataHoraLista" text="Data/Hora"/>
    </columns>
    </TableView>

    <TableView fx:id="tbItensLista">
        <columns>
                    <TableColumn fx:id="tbcIdItem" text="Id"/>
        <TableColumn fx:id="tbcProdutoItem" text="Produto"/>
        <TableColumn fx:id="tbcQuantidadeItem" text="Quantidade"/>
        <TableColumn fx:id="tbcAnotacaoItem" text="Anotação"/>
    </columns>

    </TableView>
</VBox>